{% extends 'base.html.twig' %}
{% block body %}
    <div class="main-content m-l-250">
    <div class="login-wrap">
        <div class="login-content">
            <div class="login-logo">
                <a href="#">
                    <img src="{{ asset('template/images/icon/logo.png') }}" alt="CoolAdmin">
                </a>
            </div>
            <div class="login-form">
                <form action="{{ path('connexion') }}" method="post">
                    <div class="form-group">
                        <input class="au-input au-input--full" type="text" name="_username" required
                               placeholder="LOGIN">
                    </div>
                    <div class="form-group">
                        <input class="au-input au-input--full" type="password" name="_password" required
                               placeholder="MOT DE PASSE">
                        <input type="hidden" name="go_to" value="{{ path('accueil_demandeur') }}"/>
                    </div>
                    <input class="au-btn au-btn--block au-btn--green m-b-20" value="Connexion" type="submit"
                           name="connexion"/>
                </form>
            </div>
        </div>
    </div>
{% endblock %}